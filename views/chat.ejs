      #lists button {
        width: 80px;
      }
      #lists span {
        height: 25px;
        margin-right: 10px;
      }
      #album {
        height: 85vh;
      }
      #messages span {
        font-size: x-small;
        display: grid;
        place-items: end;
        margin-bottom: 3px;
        margin-left: 6px;
        margin-right: 6px;
      }
      #chatProfile {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background-color: beige;
        text-align: center;
        font-size: medium;
        margin-left: 8px;
      }
      #chatListProfile {
        width: 10vw;
        max-width: 100px;
        height: 10vw;
        max-height: 100px;
        border-radius: 50%;
        background-color: beige;
        text-align: center;
      }
      #userTitle {
        display: flex;
      }
      #participantNum {
        border-radius: 40%;
        opacity: 40%;
      }
      #full {
